@import play.twirl.api.XmlFormat

@(boldText: Option[String], normalText: XmlFormat.Appendable)

<fo:block-container font-weight="normal"
                    font-size="11px"
                    line-height="13pt"
                    keep-together.within-column="always">
  @if(boldText.isDefined) {
    <fo:block font-weight="bold">@boldText</fo:block>
  }
  <fo:block>@normalText</fo:block>
</fo:block-container>
